{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "allowJs": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "strict": true,
      "declaration": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@flare/*": ["packages/*/src"]
      }
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/build/**",
        "**/wasm/build/**"
      ]
  }